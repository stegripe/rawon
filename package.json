{
    "name": "template",
    "version": "1.0.0",
    "description": "A template to generate well-configured project base for Stegripe.",
    "main": "dist/index.js",
    "type": "module",
    "scripts": {
        "build": "npm run lint && npm run compile",
        "compile": "tsc --build tsconfig.json",
        "lint": "eslint . --ignore-path .gitignore --ext .ts",
        "lint:fix": "npm run lint -- --fix",
        "start": "node --es-module-specifier-resolution=node -r dotenv/config -r tsconfig-paths/register . | pino-pretty -t \"SYS:yyyy-MM-dd HH:mm:ss\"",
        "start:dev": "rimraf ./dist && npm run compile && npm start"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/stegripe/template.git"
    },
    "author": "Stegripe <admin@stegripe.org>",
    "license": "AGPL-3.0",
    "bugs": {
        "url": "https://github.com/stegripe/template/issues"
    },
    "homepage": "https://github.com/stegripe/template#readme",
    "engines": {
        "node": ">=16.6.0",
        "npm": ">=7.0.0"
    },
    "eslintConfig": {
        "extends": "@clytage/eslint-config/typescript",
        "ignorePatterns": "dist/*"
    },
    "imports": {
        "#rawon/*": "./dist/*"
    },
    "devDependencies": {
        "@clytage/eslint-config": "^3.0.1",
        "@types/node": "^20.10.0",
        "@typescript-eslint/eslint-plugin": "^6.4.1",
        "@typescript-eslint/parser": "^6.4.1",
        "eslint": "^8.47.0",
        "rimraf": "^5.0.5",
        "typescript": "^5.1.6"
    },
    "dependencies": {
        "date-fns": "^2.30.0",
        "discord.js": "^14.14.1",
        "dotenv": "^16.3.1",
        "got": "^13.0.0",
        "pino": "^8.16.2",
        "pino-pretty": "^10.2.3",
        "tree-kill": "^1.2.2",
        "tsconfig-paths": "^4.2.0",
        "tslib": "^2.6.2"
    }
}
