{
	"compilerOptions": {
		"target": "ES2021",
		"module": "commonjs",
		"moduleResolution": "node",
		"lib": ["ES2021", "ESNext.Array"],
		"strict": true,
		"outDir": "dist",
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"skipLibCheck": false,
		"noEmitHelpers": true,
		"importHelpers": true,
		"resolveJsonModule": true,
		"typeRoots": [
			"node_modules/@types",
			"src/typings"
		]
	},
	"exclude": [],
	"include": ["src/**/*.ts", "src/**/*.json"]
}
