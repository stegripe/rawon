# Essential configuration for Rawon Discord Bot
# Copy this file to .env and fill in your values

# Your Discord bot token (get from https://discord.com/developers/applications)
# Required, no default
DISCORD_TOKEN=""

# Main command prefix
# Default: !
MAIN_PREFIX=""

# Your main server ID for slash command registration
# Optional, no default
MAIN_SERVER=""

# Bot language
# Available: en-US, es-ES, fr-FR, id-ID, zh-CN, zh-TW, uk-UA, vi-VN, pt-BR, ru-RU, ja-JP, tr-TR, ko-KR
# Default: en-US
LOCALE=""

# Spotify API credentials (get from https://developer.spotify.com/dashboard)
# Required for Spotify support, no default
SPOTIFY_CLIENT_ID=""
SPOTIFY_CLIENT_SECRET=""

# ============== MULTI-BOT CONFIGURATION (Optional) ==============
# Enable multi-bot mode to run multiple bot instances
# Default: no
IS_MULTI_BOT=""

# Comma-separated list of bot tokens (required if IS_MULTI_BOT=yes)
# First token is the primary bot
# Example: DISCORD_TOKEN=token1,token2,token3
# Note: Override DISCORD_TOKEN above with comma-separated tokens

# Comma-separated list of bot IDs corresponding to tokens
# Example: DISCORD_ID=123456789,987654321,555555555
DISCORD_ID=""
