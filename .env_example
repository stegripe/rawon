# Essential configuration for Rawon Discord Bot
# Copy this file to .env and fill in your values

# Your Discord bot token (get from https://discord.com/developers/applications)
# Required, no default
DISCORD_TOKEN=""

# Main command prefix
# Default: !
MAIN_PREFIX=""

# Your main server ID for slash command registration
# Optional, no default
MAIN_SERVER=""

# Bot language
# Available: en, es, fr, id, zh-CN, zh-TW, uk, vi, pt-BR, ru, ja, tr
# Default: en
LOCALE=""

# Spotify API credentials (get from https://developer.spotify.com/dashboard)
# Required for Spotify support, no default
SPOTIFY_CLIENT_ID=""
SPOTIFY_CLIENT_SECRET=""

# Cookies file path for bypassing bot detection on hosting providers
# See docs/COOKIES_SETUP.md for setup instructions
# Optional, no default
YOUTUBE_COOKIES="./cache/cookies.txt"
